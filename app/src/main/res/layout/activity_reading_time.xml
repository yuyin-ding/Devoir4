<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#D5ECEC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/ignore2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:fontFamily="cursive"
            android:text="@string/ignore"
            android:textSize="20sp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/language2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language"
            android:layout_gravity="right"
            android:layout_marginStart="260dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:fontFamily="cursive"
            android:textStyle="italic|bold"
            android:layout_marginLeft="100dp" />


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="cursive"
        android:layout_marginTop="40dp"
        android:text="Before continuing... "
        android:textSize="40sp"
        android:textStyle="italic|bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:text="Create your own reading Goal!"
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:text="Set  goals to achieve and even exceed per day,per week or per month "
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15sp"
        android:text="You can also change  your choice at any time in settings then preferences."
        android:textColor="#12CDD4"
        android:textSize="11sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:backgroundTint="@color/white"
            android:text="DAYS"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp" />

        <Button
            android:id="@+id/weeks"
            android:backgroundTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:textColor="@color/black"
            android:text="WEEKS"
            android:layout_marginLeft="30dp" />

        <Button
            android:id="@+id/months"
            android:backgroundTint="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:textColor="@color/black"
            android:text="MONTHS"
            android:layout_marginLeft="30dp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/number_picker"
            android:layout_width="104dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:text="minutes"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/arrow_left3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:backgroundTint="#D5ECEC"
            app:srcCompat="@drawable/arrow_left"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/circle1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="50dp"
            android:backgroundTint="#D5ECEC"
            app:srcCompat="@drawable/ic_baseline_circle_24"
            app:tint="@color/white"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/circle3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#D5ECEC"
            app:srcCompat="@drawable/ic_baseline_circle_24"
            app:tint="@color/black"
            tools:ignore="VectorDrawableCompat" />

        <ImageButton
            android:id="@+id/arrow_right3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="255dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="0dp"
            android:backgroundTint="#D5ECEC"
            app:srcCompat="@drawable/arrow_right"
            tools:ignore="VectorDrawableCompat" />


    </LinearLayout>

</LinearLayout>