<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#D5ECEC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/ignore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ignore"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:textSize="20sp"
            android:fontFamily="cursive"
            android:textStyle="italic|bold"/>

        <TextView
            android:id="@+id/language1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language"
            android:layout_gravity="right"
            android:layout_marginStart="260dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:fontFamily="cursive"
            android:textStyle="italic|bold"
            android:layout_marginLeft="100dp" />


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="cursive"
        android:text="Before continuing... "
        android:textSize="40sp"
        android:textStyle="italic|bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:text="Please select your reading preferences..."
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:text="You can select more than one..."
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:textColor="#12CDD4"
        android:text="You can change your choice at any time in settings then preferences."
        android:textSize="12sp"
        android:textStyle="bold"/>
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawHorizontalTrack="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox android:id="@+id/biography"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:text="Biography"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20dp"
                android:background="@color/white"/>

            <CheckBox android:id="@+id/fiction"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Fiction"
                android:layout_marginStart="20sp"
                android:background="@color/white"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20dp" />

            <CheckBox android:id="@+id/poetry"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Poetry"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20dp"
                android:background="@color/white"
                android:layout_marginTop="20dp" />

            <CheckBox android:id="@+id/romances"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Romance"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20dp"
                android:background="@color/white"
                android:layout_marginTop="20dp" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/arrow_left2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:backgroundTint="#D5ECEC"
            android:layout_marginTop="30dp"
            android:src="@drawable/arrow_left" />
        <ImageView
            android:id="@+id/circle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="#D5ECEC"
           android:layout_marginStart="130dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_baseline_circle_24"
            android:layout_marginLeft="50dp"
            app:tint="@color/white"/>
        <ImageView
            android:id="@+id/circle2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:backgroundTint="#D5ECEC"
            android:layout_marginTop="30dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_baseline_circle_24"
            app:tint="@color/black"
            android:layout_marginLeft="5dp" />

        <ImageButton
            android:id="@+id/arrow_right2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#D5ECEC"
            android:layout_marginStart="120dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/arrow_right"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="255dp" />


    </LinearLayout>


</LinearLayout>